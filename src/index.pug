include pug/libs/libs

doctype html
html(lang='en')
  +head('Sign In | AV')
include pug/components/preauthorization-header
main.container
  .d-flex.flex-column.align-items-center
    form.sign__in(name='sign-in')
      .mb-3.input-email
        label.form-label(for='inputEmail') Email address
        input#inputEmail.form-control(type='email' pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$' placeholder='Enter your email' aria-describedby='emailHelp' name='user-email' required='')
        .text-warning
          | The email address is incorrect. Please retry...
        #emailHelp.form-text We&apos;ll never share your email with anyone else.
      .mb-3.input-password
        label.form-label(for='inputPassword') Password
        input#inputPassword.form-control(type='password' pattern='.{6,}' placeholder='Enter your password' name='user-password' required='')
        .text-warning
          | The password is incorrect. Please retry...
      button.btn.btn-primary(type='submit' name='authorization-button' disabled='') Login
    .text-success.log-in.mt-3
    span.mt-3
      | Don&apos;t have account?
      a(href='sign-up.html')  Sign Up
include pug/components/preauthorization-footer

