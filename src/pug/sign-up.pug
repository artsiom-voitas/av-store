include libs/libs

doctype html
html(lang='en')
  +head('Sign Up | AV')
include components/preauthorization-header
main.container
  .d-flex.flex-column.align-items-center
    form.sign__up(name='sign-up')
      .mb-3.input-email
        label.form-label(for='inputEmail') Email address
        input#inputEmail.form-control(type='email' pattern='[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$' placeholder='Enter your email' aria-describedby='emailHelp' name='new-user-email' required='')
        .text-warning
          | The email address is incorrect. Please retry...
        #emailHelp.form-text We&apos;ll never share your email with anyone else.
      .mb-3.input-password
        label.form-label(for='inputPassword') Password
        input#inputPassword.form-control(type='password' pattern='.{6,}' placeholder='Enter your password' name='new-user-password' required='')
        .text-warning
          | The password is incorrect. Please retry...
      .mb-3
        label.form-label(for='confirmPassword') Confirm Password
        input#confirmPassword.form-control(type='password' pattern='.{6,}' placeholder='Enter your password' name='confirm-password' required='')
        .text-warning.confirm-password
          | Passwords doesn&apos;t match, repeat again...
      button.btn.btn-primary(type='submit' name='sign-up-button' disabled='') Sign Up
    .text-success.registered.mt-3
    span.mt-3
      | Do you already have an account?
      a(href='index.html')  Sign In
include components/preauthorization-footer
